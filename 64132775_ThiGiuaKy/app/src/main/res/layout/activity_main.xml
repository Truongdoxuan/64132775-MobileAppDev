<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="270dp"
        android:layout_height="48dp"
        android:layout_marginStart="55dp"
        android:layout_marginTop="55dp"
        android:layout_marginEnd="55dp"
        android:gravity="center"
        android:text="Applications"
        android:textColor="#0FF675"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnBai1"
        android:layout_width="270dp"
        android:layout_height="48dp"
        android:layout_marginStart="149dp"
        android:layout_marginTop="55dp"
        android:layout_marginEnd="149dp"
        android:onClick="nextPage1"
        android:text="Bài 1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"/>

    <Button
        android:id="@+id/btnBai2"
        android:layout_width="270dp"
        android:layout_height="48dp"
        android:layout_marginStart="149dp"
        android:layout_marginTop="55dp"
        android:layout_marginEnd="149dp"
        android:onClick="nextPage2"
        android:text="Bài 2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnBai1" />

    <Button
        android:id="@+id/btnBai3"
        android:layout_width="270dp"
        android:layout_height="48dp"
        android:layout_marginStart="149dp"
        android:layout_marginTop="55dp"
        android:layout_marginEnd="149dp"
        android:onClick="nextPage3"
        android:text="Bài 3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnBai2" />

    <Button
        android:id="@+id/btnBai4"
        android:layout_width="270dp"
        android:layout_height="48dp"
        android:layout_marginStart="149dp"
        android:layout_marginTop="55dp"
        android:layout_marginEnd="149dp"
        android:onClick="nextPage4"
        android:text="Bài 4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnBai3" />


</androidx.constraintlayout.widget.ConstraintLayout>